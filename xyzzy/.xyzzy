(define-key ctl-x-map #\C-b 'select-buffer)
(define-key ctl-x-map '(#\r #\k) 'kill-rectangle)
(define-key ctl-x-map '(#\r #\y) 'yank-rectangle)
(define-key ctl-x-map '(#\r #\c) 'copy-rectangle)
(global-set-key #\Home 'beginning-of-buffer)
(global-set-key #\End 'end-of-buffer)
(global-set-key #\M-/ 'dabbrev-expand)

(setq *default-fileio-encoding* *encoding-utf8n*)
(setq *default-eol-code* *eol-lf*)
(setq-default indent-tabs-mode nil)
(setq *c-indent-tabs-mode* nil)
(setq c-indent-level 2)
